<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo de la píldora -->
    <solid android:color="#FF4081" />

    <!-- Bordes redondeados -->
    <corners android:radius="20dp" />

    <!-- Ancho y alto de la píldora -->
    <size
        android:width="40dp"
        android:height="20dp" />

    <!-- Opciones para centrar el contenido -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="2dp"
        android:bottom="2dp" />

    <!-- Sombra -->
    <stroke
        android:width="1dp"
        android:color="#000000" />

</shape>